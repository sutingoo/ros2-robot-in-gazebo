import rclpy
import math
from rclpy.node import Node
from geometry_msgs.msg import Twist

class TurtleController(Node):
    def __init__(self):
        super().__init__('turtle_commander')
        self.publisher_ = self.create_publisher(Twist, '/turtle1/cmd_vel', 10)
        self.timer = self.create_timer(0.1, self.move_callback)
        self.state = 'FORWARD'
        self.current_value = 0.0
        self.target_dist = 3
        self.target_angle = math.pi /2
        self.linear_speed = 3.0
        self.angular_speed = 2.0
        self.timer_period = 0.1
        self.get_logger().info('Nodo INICIADO')
    def normalize_angle(self, angle):
        return math.atan2(math.sin(angle), math.cos(angle))

    def move_callback(self):
        msg = Twist()
        if self.state == 'FORWARD':
            msg.linear.x = self.linear_speed
            msg.angular.z = 0.0
            self.current_value += (self.linear_speed*self.timer_period)
            if self.current_value >= self.target_dist:
                self.state ='TURN'
                self.current_value = 0.0
                self.get_logger().info('Girando')

        elif self.state == 'TURN':
            msg.linear.x = 0.0
            msg.angular.z = self.angular_speed
            self.current_value += (self.angular_speed*self.timer_period)
            angulo_norm= self.normalize_angle(self.current_value)

            if self.current_value >= self.target_angle:
                self.state = 'FORWARD'
                self.current_value = 0.0
                self.get_logger().info('Avanzando')
        self.publisher_.publish(msg)

def main(args=None):
    rclpy.init(args=args)
    turtle_commander=TurtleController()
    rclpy.spin(turtle_commander)
    turtle_commander.destroy_node()
    rclpy.shutdown()

if __name__=='__main__':
    main()
